@model DIPatternDemo.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Student</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StdRollNo" class="control-label"></label>
                <input asp-for="StdRollNo" class="form-control" />
                <span asp-validation-for="StdRollNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StdName" class="control-label"></label>
                <input asp-for="StdName" class="form-control" />
                <span asp-validation-for="StdName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StdBranch" class="control-label"></label>
                <input asp-for="StdBranch" class="form-control" />
                <span asp-validation-for="StdBranch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StdPercentage" class="control-label"></label>
                <input asp-for="StdPercentage" class="form-control" />
                <span asp-validation-for="StdPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
